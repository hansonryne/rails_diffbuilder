<p id="notice"><%= notice %></p>
<div class="py-4 px-4 border-l border-b border-r">
    <div class="flex justify-center">
        <div class="grid grid-cols-2 gap-4 w-full">
            <% @checklists.each do |c| %>
            <div class='p-4 border shadow-sm bg-gray-100'>
                <div class="flex justify-center text-xl mb-2">
                    <%= link_to c.name, checklist_path(c), class: "underline font-bold text-teal-700" %>
                </div>
                <div class="flex justify-between content-center py-2">
                    <div>
                        <span class="font-semibold px-2"><%= c.searchterms.count %></span>search terms
                    </div>
                    <div>
                        <% c.languages.each do |l| %>
                        <span class="inline-block border border-teal-700 rounded-full px-3 text-sm font-semibold text-teal-700 mr-2 hover:bg-teal-700 hover:text-white"><%= link_to l.name, language_path(l) %></span>
                        <% end %>
                    </div>
                </div>
            </div>
            <% end %>
        </div>
    </div>
</div>