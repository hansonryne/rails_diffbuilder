<div class="p-10">
<p id="notice"><%= notice %></p>

<h1 class="text-2xl p-4">Checklists</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @checklists.each do |checklist| %>
      <tr>
        <td class="p-2"><%= link_to checklist.name, checklist_path(checklist) %></td>
        <td><%= link_to 'Destroy', checklist, method: :delete, data: { confirm: 'Are you sure?' }, class: "bg-red-500 hover:bg-red-600 text-white font-bold py-1 px-2 m-2 rounded" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
