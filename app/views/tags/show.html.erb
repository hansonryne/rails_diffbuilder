<p id="notice"><%= notice %></p>

<div class="flex justify-center">
    <div class="font-bold text-xl mt-4 text-teal-700">
        <%= @tag.name %>
    </div>
</div>

<div class="flex justify-center">
    <div class="table my-4">
        <div class="table-row-group">
            <div class="table-row">
                <div class="table-cell bg-teal-700 text-white px-4 py-2 text-sm border">Rules</div>
                <div class="table-cell bg-teal-700 text-white px-4 py-2 text-sm border">Language</div>
            </div>
            <% @tag.rules.reverse.each_with_index do |r, index| %>
            <div class="table-row">
                <div class="table-cell bg-<%= index.even? ? 'gray-200 ' : 'white ' %>text-teal-700 font-semibold px-4 py-2 text-sm border"><%= link_to r.title, rule_path(r) %></div>
                <div class="table-cell bg-<%= index.even? ? 'gray-200 ' : 'white ' %>text-teal-700 font-semibold px-4 py-2 text-sm border"><%= link_to r.language.name, language_path(r.language) %></div>
            </div>
            <% end %>
        </div>
    </div>
</div>