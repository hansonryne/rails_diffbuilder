<p id="notice"><%= notice %></p>

<h1>Diffs</h1>

<table>
  <thead>
    <tr>
      <th>Review</th>
      <th>Status</th>
      <th>Notes</th>
      <th>Path</th>
      <th>Reason</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @diffs.each do |diff| %>
      <tr>
        <td><%= diff.review_id %></td>
        <td><%= diff.status %></td>
        <td><%= diff.notes %></td>
        <td><%= diff.path %></td>
        <td><%= diff.reason %></td>
        <td><%= link_to 'Show', diff %></td>
        <td><%= link_to 'Edit', edit_diff_path(diff) %></td>
        <td><%= link_to 'Destroy', diff, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Diff', new_diff_path %>
