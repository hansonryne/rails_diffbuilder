<div class="w-full border-l border-r">
    <%= form_with model: diff, data: { reflex: "submit->DiffReflex#update_status" } do |form| %>

    <div class="flex justify-center">
        <div class="flex justify-center w-11/12">
            <div class="grid grid-cols-1 gap-2 w-1/3 lg:max-w-xs mx-2">

                <%= form.hidden_field :id, :value => diff.id, class: "hidden" %>

                <%= form.label :status, class: "text-teal-700 font-bold" %>
                <div class="relative">
                <%= form.collection_select :status, ["Incomplete", "Ignored", "Vulnerable", "Complete"], :to_s, :to_s, { prompt: "Choose a Status" }, { class: "block appearance-none w-full bg-white border border-teal-700 text-gray-700 py-2 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500" } %>
                <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
                    <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                        <path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z" /></svg>
                </div>
                </div>
                <%= form.submit "Update Status", class: "bg-white border border-teal-700 hover:bg-teal-700 hover:text-white text-teal-700 font-bold rounded mx-16 my-6", data: { reflex: "click->DiffReflex#update_status" } %>
            </div>

            <div class="grid grid-cols-1 gap-2 w-2/3 mx-2">
                <%= form.label :notes, class: "text-teal-700 font-bold" %>
                <%= form.text_area :notes, value: diff.notes, placeholder: "Enter your notes here...", :rows => 5, class: "shadow-md resize-none p-2", data: { reflex: "change->DiffReflex#update_status" } %>
            </div>
        </div>
    </div>

    <% end %>
</div>